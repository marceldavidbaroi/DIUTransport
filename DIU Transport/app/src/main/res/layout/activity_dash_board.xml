<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dash_board">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/bg1"
        android:padding="20dp">

        <TextView
            android:id="@+id/log_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:textSize="20dp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_notifications_24" />
    </RelativeLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_header"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_header"
            android:background="@drawable/bg1">

            <RelativeLayout
                android:id="@+id/layout_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_header"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gradient_button"
                android:backgroundTint="#40FFFFFF"
                android:padding="60dp">

                <TextView
                    android:id="@+id/Bus_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_baseline_directions_bus_24"
                    android:drawablePadding="10dp"
                    android:text="Bus"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Bus_dis_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Bus_tv"
                    android:text="Available buses at this moment"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/Bus_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_body"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gradient_button"
                android:backgroundTint="#40FFFFFF"
                android:padding="60dp">

                <TextView
                    android:id="@+id/Ambulance_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@drawable/ic_baseline_healing_24"
                    android:drawablePadding="10dp"
                    android:text="Ambulance"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Ambulance_dis_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Ambulance_tv"
                    android:text="Available ambulance at this moment"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/Ambulance_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_body3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_body2"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gradient_button"
                android:backgroundTint="#40FFFFFF"
                android:padding="60dp">

                <TextView
                    android:id="@+id/Special_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                    android:drawablePadding="10dp"
                    android:text="Special "
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Special_dis_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Special_tv"
                    android:text="Available special at this moment"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/Special_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_footer_white"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/layout_body3"
                android:background="@color/white"
                android:padding="20dp"></RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg1"
            android:padding="20dp">

            <TextView
                android:id="@+id/home_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="0dp"
                android:drawableTop="@drawable/ic_baseline_home_24"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="home"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/nearMe_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_toRightOf="@+id/home_btn_tv"
                android:drawableTop="@drawable/ic_baseline_near_me_24"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Near"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/preBook_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_toLeftOf="@+id/home_btn_tv"
                android:drawableTop="@drawable/ic_baseline_book_24"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Booking"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/eTicket_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_toLeftOf="@+id/preBook_btn_tv"
                android:drawableTop="@drawable/ic_baseline_note_add_24"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Eticket"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/settings_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_toRightOf="@+id/nearMe_btn_tv"
                android:drawableTop="@drawable/ic_baseline_settings_24"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Settings"
                android:textColor="@color/white" />


        </RelativeLayout>


</RelativeLayout>